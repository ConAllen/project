<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<%# the below was added to add in a name when the user signs up. this was achieved by coping
and pasting the below fields and changing email to name. and email_field to text_feld%>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email,class: "form-control" %>
  </div>
<%# we added a new form-control to each entity this gave us a nicer form boxes%>
<div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
  </div>
  <%# we added a new form-group class to each element this added more spacing%>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
  </div>
  <%# we added a new a new button%>

  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
