<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  <%= @listings.each do |listing| %>
  <tr>
    <td><%= image_tag listing.image.url( :thumb) %></td>
    <td><%= listing.name %></td>
    <td><%= listing.description %></td>
    <td><%= listing.category %></td>
    <td><%= listing.price %></td>
    <td>
    <%= link_to 'Show', listing,class:" btn btn-link" %>
    <%= link_to 'Edit', edit_listing_path(listing),class:" btn btn-link"%>
    <p><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' },class:" btn btn-link" %><p>
    </td>
  </tr>
  <%end%>
</table>
